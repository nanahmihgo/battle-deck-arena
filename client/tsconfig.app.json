{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": ["dom", "esnext"],
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,

    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vite/client",
      "vue",
      "babylonjs"
    ]
  }
}
